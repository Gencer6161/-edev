#include <iostream>
#include <ctime>
#include <stdio.h>
#pragma warning (disable:4996)
using namespace std;

int main() {
	setlocale(LC_ALL, "Turkish");
	int x;
	cout<<"bir sayı giriniz\n->";
	cin>>x;
	if(x==0){
		cout<<"sayınız nördür";
	}
	if(x<0){
		cout<<"sayınız negatifdir";
	}
	if(x>0){
		cout<<"sayınız pozitifdir";
	}
	return 0;
}
